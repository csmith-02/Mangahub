<%- include ('../partials/header.ejs') %>
<main class="flex-1 flex flex-col items-center w-full p-2 gap-2 overflow-y-scroll flex-wrap">
    <h1 class="underline text-xl font-bold">Offers:</h1>
    <% if (offers.length == 0) { %>
        <h1>No offers so far!</h1>
    <% } else { %>

    <% } %>
    <% offers.forEach((o)=> { %>
        <% if (o.status != 'rejected' && o.status != 'accepted') { %>
            <div class="w-1/6">
                <div class="p-4 w-full border-black border-2 rounded-xl">
                    <h1 class="text-xl font-bold text-center">Offer</h1>
                    <h1>Manga: <%= o.manga.title %></h1>
                    <h1>Seller: <%= o.manga.seller %></h1>
                    <h1>Offer Amount: $<%= o.offer.toFixed(2) %></h1>
                    <h1>Time Posted: <%= o.createdAt.toLocaleString() %></h1>
                    <form method="post" class="flex justify-between">
                        <h1>Status: <%= o.status %></h1>
                        <div>
                            <button type="submit" class="px-4 py-2 text-white bg-green-500 rounded-lg hover:opacity-80" formaction="/users/profile/<%= o._id %>/accept?_method=PUT">Accept</button>
                            <button type="submit" class="px-4 py-2 text-white bg-red-500 rounded-lg hover:opacity-80" formaction="/users/profile/<%= o._id %>/reject?_method=PUT">Reject</button>
                        </div>
                    </form>
                </div>
            </div>
        <% } %>
    <% }); %>
</main>
<%- include ('../partials/footer.ejs') %>
