<%- include('../../partials/header.ejs') %>
<main class="flex-1 flex justify-center items-center h-full">
    <div class="w-1/4 h-1/2">
        <form action="/manga/<%= manga._id %>/new" method="post" class="flex flex-col justify-center items-center gap-3 p-8 border-2 border-black rounded-lg">
            <h1 class="font-bold underline text-3xl">New Offer</h1>
            <div class="flex items-center gap-2">
                <h1>Title: </h1>
                <input type="text" class="text-text p-2 outline-none" value="<%= manga.title %>" readonly />
            </div>
            <div class="flex items-center gap-2">
                <h1 class="self-start">Description: </h1>
                <textarea readonly type="text" class="outline-none resize-none h-[150px] w-[300px]"><%= manga.details %></textarea>
            </div>
            <div class="flex items-center gap-2">
                <h1>Offer: </h1>
                <input required type="number" name="price" placeholder="0.00" step="0.01" class="text-text p-2" min="0.01"/>
            </div>
            <button type="submit" class="p-4 bg-blue-500 text-center rounded-lg w-2/6 text-text hover:opacity-80 text-white text-2xl">New Offer</button>
        </form>
    </div>
</main>
<%- include('../../partials/footer.ejs') %>